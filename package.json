{
  "name": "backend-coding-challenge",
  "version": "1.0.0",
  "description": "Coding challenge for Developer position at Coveo",
  "main": "index.js",
  "repository": "git@github.com:paul-arthurthiery/backend-coding-challenge.git",
  "author": "Paul-Arthur Thi√©ry <paul-arthur.thiery@dynamicly.com>",
  "license": "Beerware",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "test": "jest"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "express": "^4.17.1",
    "http-errors": "^1.7.3",
    "jest": "^26.0.1",
    "jsdoc": "^3.6.4"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": "airbnb-base",
    "rules": {
      "no-plusplus": [
        2,
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ]
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/data/*.js",
      "**/controllers/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.js"
    ]
  }
}
